<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bishal.downloader.presentation.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_progressFragment"
            app:destination="@id/progressFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/progressFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/progressFragment"
        android:name="com.bishal.downloader.presentation.fragment.ProgressFragment"
        android:label="fragment_progress"
        tools:layout="@layout/fragment_progress" >
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="likecount"
            app:argType="string" />
        <argument
            android:name="viewcount"
            app:argType="string" />
        <argument android:name="thumbnail" />
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="size"
            app:argType="long" />
    </fragment>
</navigation>
